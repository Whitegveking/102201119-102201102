/* 页面整体布局 */
.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100vh;
	background-color: #e0f7fa;
  }
  
  /* 登录页面标题 */
  .login-header {
	font-size: 24px;
	font-weight: bold;
	margin-bottom: 20px;
  }
  
  /* 表单布局 */
  .login-form {
	width: 80%;
  }
  
  /* 输入框组 */
  .input-group {
	margin-bottom: 15px;
  }
  
  input {
	width: 100%;
	padding: 10px;
	border-radius: 5px;
	border: 1px solid #ccc;
  }
  
  /* 登录按钮 */
  .login-button {
	width: 100%;
	padding: 10px;
	background-color: #42a5f5;
	color: white;
	border: none;
	border-radius: 5px;
	margin-top: 10px;
  }
  
  /* 注册按钮 */
  .register-button {
	width: 100%;
	padding: 10px;
	background-color: #bbdefb;
	color: black;
	border: none;
	border-radius: 5px;
	margin-top: 10px;
  }
  
  /* 忘记密码 */
  .forgot-password {
	text-align: center;
	margin-top: 10px;
	color: #424242;
  }
  