.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    padding: 10px;
  }
  .message-list {
    flex: 1;
    overflow-y: scroll;
    margin-bottom: 10px;
  }
  .message-item {
    margin-bottom: 5px;
  }
  .sender {
    font-weight: bold;
  }
  .content {
    margin-left: 5px;
  }
  form {
    display: flex;
  }
  form input {
    flex: 1;
    padding: 5px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  form button {
    margin-left: 10px;
    padding: 5px 10px;
    background-color: #1AAD19;
    color: white;
    border: none;
    border-radius: 4px;
  }
  