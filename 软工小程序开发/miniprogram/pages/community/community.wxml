<view class="container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <navigator url="../home/home">返回</navigator>
    <text>附近/推荐</text>
  </view>

  <!-- 推荐项目/团队/老师的展示 -->
  <scroll-view scroll-x="true" class="recommend-section">
    <view class="recommend-item" wx:for="{{recommendations}}" wx:key="id">
      <image src="{{item.image}}" class="recommend-image"></image>
      <text>{{item.title}}</text>
    </view>
  </scroll-view>

  <!-- 辅助画板或内容展示 -->
  <view class="content">
    <text>辅助画板 1</text>
  </view>

  <!-- 底部 tabBar -->
  <view class="footer">
    <navigator url="/pages/community/community">
      <image src="/images/community.png" class="icon"></image>
      <text>社区主页</text>
    </navigator>
    <navigator url="/pages/friends/friends">
      <image src="/images/friends.png" class="icon"></image>
      <text>好友列表</text>
    </navigator>
    <navigator url="/pages/chat/chat">
      <image src="/images/chat.png" class="icon"></image>
      <text>个人项目聊天室</text>
    </navigator>
  </view>
</view>
