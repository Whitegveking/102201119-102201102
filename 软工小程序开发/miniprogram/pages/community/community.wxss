/* 页面容器 */
.container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #e0f7fa;
  }
  
  /* 顶部导航栏 */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background-color: #ffffff;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  
  .header navigator {
    font-size: 16px;
    color: #42a5f5;
  }
  
  /* 推荐展示 */
  .recommend-section {
    display: flex;
    flex-direction: row;
    padding: 10px;
    background-color: #ffffff;
  }
  
  .recommend-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100px;
    margin-right: 10px;
  }
  
  .recommend-image {
    width: 60px;
    height: 60px;
    border-radius: 8px;
    background-color: #ccc;
    margin-bottom: 5px;
  }
  
  /* 辅助画板或内容展示 */
  .content {
    flex: 1;
    padding: 10px;
    background-color: #bbdefb;
    margin-top: 10px;
  }
  
  /* 底部导航栏 */
  .footer {
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background-color: #ffffff;
    box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1);
  }
  
  .footer navigator {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #8a8a8a;
  }
  
  .footer .icon {
    width: 24px;
    height: 24px;
    margin-bottom: 5px;
  }
  
  .footer navigator text {
    font-size: 12px;
  }
  