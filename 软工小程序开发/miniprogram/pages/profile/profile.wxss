.container {
    padding: 20px;
  }
  .user-info {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
  }
  .avatar {
    width: 60px;
    height: 60px;
    border-radius: 30px;
    margin-right: 10px;
  }
  .nickname {
    font-size: 18px;
    font-weight: bold;
  }
  .project-section {
    margin-bottom: 20px;
  }
  .section-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
  }
  .project-item {
    padding: 10px;
    border-bottom: 1px solid #eee;
    cursor: pointer;
  }
  .project-item text {
    font-size: 14px;
  }
  