/* pages/home/home.wxss */
.container {
  padding: 20px;
}

.project-item {
  border: 1px solid #eee;
  padding: 15px;
  border-radius: 5px;
  margin-bottom: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.project-info {
  flex: 1;
}

.project-name {
  font-size: 20px;
  font-weight: bold;
}

.project-description {
  font-size: 16px;
  color: #555;
  margin-top: 5px;
}

.member-count {
  font-size: 14px;
  color: #888;
  margin-top: 5px;
}

.project-actions {
  margin-left: 20px;
}

.join-btn {
  background-color: #1aad19;
  color: white;
  border: none;
  padding: 6px 12px;
  border-radius: 4px;
  font-size: 14px;
}

.creator-label,
.member-label {
  font-size: 14px;
  color: #888;
}
