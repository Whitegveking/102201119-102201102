/* pages/index/index.wxss */

.container {
  padding: 20px;
  background-color: #c7e7f7; /* 更改背景色为 #C7E7F7 */
  min-height: 100vh;
}

/* 排序选项样式 */
.picker {
  margin-bottom: 20px;
}

.picker-content {
  padding: 12px 16px;
  background-color: #ffffff;
  border: 1px solid #ddd;
  border-radius: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 16px;
  color: #333;
}

.picker-content:hover {
  border-color: #999;
}

/* 项目卡片样式 */
.project-card {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: flex-start; /* 调整为 flex-start 以适应换行内容 */
  transition: box-shadow 0.3s;
}

.project-card:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.project-info {
  flex: 1;
  margin-right: 20px;
}

.project-name {
  font-size: 20px;
  font-weight: bold;
  color: #1a73e8;
  margin-bottom: 8px;
  display: block; /* 确保独占一行 */
}

.project-description {
  font-size: 16px;
  color: #555555;
  margin-bottom: 12px;
  display: block; /* 确保独占一行 */
}

.project-details {
  display: flex;
  gap: 20px;
  font-size: 14px;
  color: #777777;
}

.member-count,
.publish-time {
  display: flex;
  align-items: center;
}

.member-count::before,
.publish-time::before {
  content: "";
  display: inline-block;
  width: 6px;
  height: 6px;
  background-color: #777777;
  border-radius: 50%;
  margin-right: 6px;
}

/* 项目状态标签 */
.project-status {
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-size: 14px;
}

.status-text {
  margin-left: 6px;
}

/* 项目操作按钮样式 */
.project-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.join-btn {
  background-color: #1aad19;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
  margin-bottom: 8px; /* 增加按钮之间的间距 */
}

.join-btn:hover {
  background-color: #179b16;
}

.creator-label,
.member-label {
  font-size: 14px;
  color: #888888;
  padding: 6px 12px;
  background-color: #f0f0f0;
  border-radius: 6px;
}

/* 无项目提示样式 */
.no-projects {
  text-align: center;
  font-size: 16px;
  color: #999999;
  padding: 40px 0;
}

/* 响应式设计 */
@media (max-width: 600px) {
  .project-card {
    flex-direction: column;
    align-items: flex-start;
  }

  .project-info {
    margin-right: 0;
    margin-bottom: 12px;
  }

  .project-details {
    flex-direction: column;
    gap: 8px;
  }

  .project-actions {
    width: 100%;
    align-items: flex-start;
  }

  .join-btn {
    width: 100%;
    text-align: center;
  }

  .project-status {
    margin-top: 8px;
  }
}
