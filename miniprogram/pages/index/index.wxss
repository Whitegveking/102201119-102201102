/* pages/index/index.wxss */
.container {
  padding: 20px;
}
.picker {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 20px;
}
.project-list {
  display: flex;
  flex-direction: column;
}
.project-item {
  padding: 15px;
  border: 1px solid #ddd;
  border-radius: 8px;
  margin-bottom: 10px;
}
.project-name {
  font-size: 18px;
  font-weight: bold;
}
.project-desc {
  margin-top: 5px;
  font-size: 14px;
  color: #555;
}
.project-meta {
  margin-top: 10px;
  font-size: 12px;
  color: #888;
}
