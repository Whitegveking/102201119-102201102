/* pages/profile/profile.wxss */

/* 容器样式 */
.container {
  padding: 20px;
  background-color: #c7e7f7; /* 与首页一致的背景色 */
  min-height: 100vh;
}

/* 用户信息部分 */
.user-info {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 25px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-right: 20px;
  background-color: #ddd; /* 默认头像背景色 */
}

.user-details {
  flex: 1;
}

.nick-name {
  font-size: 22px;
  font-weight: bold;
  color: #1a73e8;
  margin-bottom: 8px;
  display: block;
}

.username {
  font-size: 16px;
  color: #555555;
  margin-bottom: 12px;
  display: block;
}

/* 编辑用户名按钮 */
.edit-username-btn {
  background-color: #1aad19;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.edit-username-btn:hover {
  background-color: #179b16;
}

/* 项目列表部分 */
.projects-section {
  margin-bottom: 30px;
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 15px 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 项目列表标题与切换按钮 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15px;
}

.toggle-icon {
  transition: transform 0.3s, color 0.3s;
  color: #333333; /* 设置箭头颜色为深灰色，确保对比度 */
}

.toggle-icon.rotate {
  transform: rotate(180deg); /* 旋转180度，指向上 */
}

/* 项目卡片样式（与主页一致） */
.project-card {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 16px;
  margin-bottom: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  transition: box-shadow 0.3s;
}

.project-card:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
}

.project-info {
  flex: 1;
  margin-right: 20px;
}

.project-name {
  font-size: 20px;
  font-weight: bold;
  color: #1a73e8;
  margin-bottom: 8px;
  display: block;
}

.project-description {
  font-size: 16px;
  color: #555555;
  margin-bottom: 12px;
  display: block;
}

.project-details {
  display: flex;
  gap: 20px;
  font-size: 14px;
  color: #777777;
}

.member-count,
.publish-time {
  display: flex;
  align-items: center;
}

.member-count::before,
.publish-time::before {
  content: "";
  display: inline-block;
  width: 6px;
  height: 6px;
  background-color: #777777;
  border-radius: 50%;
  margin-right: 6px;
}

/* 项目状态标签 */
.project-status {
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-size: 14px;
}

.status-text {
  margin-left: 6px;
}

/* 项目操作按钮样式 */
.project-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.delete-btn,
.exit-btn {
  background-color: #ff4d4f;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
  margin-bottom: 8px;
}

.delete-btn:hover,
.exit-btn:hover {
  background-color: #d9363e;
}

/* 无项目提示样式 */
.no-projects {
  text-align: center;
  font-size: 16px;
  color: #999999;
  padding: 20px 0;
}

/* 聊天室消息展示部分 */
.chat-section {
  background-color: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 20px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15px;
}

.chat-container {
  height: 300px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  overflow-y: scroll;
  background-color: #f9f9f9;
  margin-bottom: 15px;
}

.message-item {
  margin-bottom: 15px;
  padding: 10px;
  border-radius: 8px;
  background-color: #e6f7ff;
}

.own-message {
  background-color: #d9f7be;
  align-self: flex-end;
}

.other-message {
  background-color: #e6f7ff;
  align-self: flex-start;
}

.message-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.message-sender {
  font-weight: bold;
  color: #1a73e8;
}

.message-timestamp {
  font-size: 12px;
  color: #999999;
}

.message-content {
  font-size: 14px;
  color: #333333;
}

/* 发送消息输入框 */
.message-input-container {
  display: flex;
  gap: 10px;
}

.message-input {
  flex: 1;
  padding: 10px 12px;
  border: 1px solid #ddd;
  border-radius: 8px;
  font-size: 16px;
  background-color: #ffffff;
}

.send-btn {
  padding: 10px 16px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.send-btn:hover {
  background-color: #179b16;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000; /* 确保弹窗在最上层 */
}

.modal {
  background-color: #ffffff;
  border-radius: 10px;
  padding: 20px;
  width: 80%;
  max-width: 400px;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15px;
  text-align: center;
}

.username-input {
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 10px;
  font-size: 16px;
  margin-bottom: 20px;
  width: 100%;
}

.modal-buttons {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #333333;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.cancel-btn:hover {
  background-color: #d9d9d9;
}

.confirm-btn {
  background-color: #1aad19;
  color: white;
  border: none;
  padding: 8px 16px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.confirm-btn:hover {
  background-color: #179b16;
}

/* 响应式设计 */
@media (max-width: 600px) {
  .container {
    padding: 15px;
  }

  .user-info {
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .avatar {
    margin-right: 0;
    margin-bottom: 15px;
  }

  .user-details {
    width: 100%;
  }

  .nick-name {
    font-size: 20px;
  }

  .username {
    font-size: 14px;
  }

  .edit-username-btn {
    width: 100%;
  }

  /* 项目列表部分 */
  .projects-section {
    padding: 15px 10px;
  }

  .section-header {
    justify-content: space-between;
  }

  .toggle-icon {
    transition: transform 0.3s, color 0.3s;
    color: #333333; /* 设置箭头颜色为深灰色，确保对比度 */
  }

  .toggle-icon.rotate {
    transform: rotate(180deg); /* 旋转180度，指向上 */
  }

  .project-card {
    flex-direction: column;
    align-items: flex-start;
  }

  .project-info {
    margin-right: 0;
    margin-bottom: 12px;
  }

  .project-details {
    flex-direction: column;
    gap: 8px;
  }

  .project-actions {
    width: 100%;
    align-items: flex-start;
  }

  .delete-btn,
  .exit-btn {
    width: 100%;
    text-align: center;
  }

  /* 聊天室部分 */
  .chat-container {
    height: 200px;
  }

  .message-content {
    font-size: 13px;
  }

  /* 弹窗样式 */
  .modal {
    width: 90%;
    padding: 15px;
  }
}
