<view class="container">
  <view class="project-info">
    <text class="project-name">{{project.name}}</text>
    <text class="project-description">{{project.description}}</text>
    <text class="project-status">状态: {{project.status}}</text>
    <text class="project-skills">所需技能: {{project.skills.join(', ')}}</text>
    <button wx:if="{{!isMember && project.status === '招募中'}}" bindtap="joinProject">申请加入</button>
    <button wx:if="{{isMember}}" bindtap="goToChat">进入聊天</button>
  </view>
  <view class="member-list">
    <text class="section-title">成员:</text>
    <block wx:for="{{members}}" wx:key="_id">
      <text>{{item.nickName}}</text>
    </block>
  </view>
</view>
